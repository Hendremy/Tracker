<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		MaxWidth="400" MaxHeight="100"
        x:Class="Hendricé.Rémy.Poo.Tracker.Gui.ErrorWindow"
        Title="Erreur">
	<StackPanel Margin="2" Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Center">
		<TextBlock TextWrapping="Wrap" Foreground="Red" Name="ErrorMessage">Erreur</TextBlock>
		<Button HorizontalAlignment="Center" Content="Ok" Click="Error_Seen"></Button>
	</StackPanel>
</Window>
